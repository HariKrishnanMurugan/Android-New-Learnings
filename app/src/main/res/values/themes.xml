<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InternProjectRevamp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="materialButtonStyle">@style/MaterialButtonCommonStyle</item>
    </style>

    <!--Edit text style that applied for whole app-->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--Material button style that applied for whole app-->
    <style name="MaterialButtonCommonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:padding">@dimen/spacing_12</item>
        <item name="android:radius">@dimen/spacing_16</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/semiTransparentBlack50</item>
        <item name="android:layout_marginBottom">@dimen/spacing_4</item>
    </style>
</resources>
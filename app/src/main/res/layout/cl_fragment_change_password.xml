<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/concrete_grey">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/concrete_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_change_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_back"
                style="@style/TextViewCommonStyle.ToolbarStyle"
                android:text="@string/back"
                app:layout_constraintBottom_toBottomOf="@id/layout_change_password"
                app:layout_constraintEnd_toStartOf="@id/tv_change_done"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/layout_change_password"
                app:layout_constraintTop_toTopOf="@id/layout_change_password"/>

            <TextView
                android:id="@+id/tv_change_done"
                style="@style/TextViewCommonStyle.ToolbarStyle"
                android:text="@string/done"
                app:layout_constraintBottom_toBottomOf="@id/layout_change_password"
                app:layout_constraintEnd_toEndOf="@id/layout_change_password"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="@id/layout_change_password"
                app:layout_constraintTop_toTopOf="@id/layout_change_password"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/cv_changed_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_change_password">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_layout_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/concrete_grey"
            android:padding="@dimen/spacing_15">

            <TextView
                android:id="@+id/tv_password"
                style="@style/TextViewCommonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_password"
                app:layout_constraintBottom_toTopOf="@id/tie_new_password"
                app:layout_constraintStart_toStartOf="@id/cv_layout_password"
                app:layout_constraintTop_toTopOf="@id/cv_layout_password"/>

            <com.example.internproject_revamp.widgets.CLEditText
                android:id="@+id/tie_new_password"
                style="@style/EditTextCommonStyle"
                android:layout_marginTop="@dimen/spacing_5"
                android:layout_marginBottom="@dimen/spacing_15"
                android:hint="@string/new_password"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="@id/cv_layout_password"
                app:layout_constraintEnd_toEndOf="@id/cv_layout_password"
                app:layout_constraintStart_toStartOf="@id/cv_layout_password"
                app:layout_constraintTop_toBottomOf="@id/tv_password"
                tools:text="8409384"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_changed_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_password">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/changed_password_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/concrete_grey"
            android:padding="@dimen/spacing_15">

            <TextView
                android:id="@+id/tv_changed_password"
                style="@style/TextViewCommonStyle"
                android:text="@string/current_password"
                app:layout_constraintBottom_toTopOf="@id/tie_current_password"
                app:layout_constraintStart_toStartOf="@id/changed_password_layout"
                app:layout_constraintTop_toTopOf="@id/changed_password_layout"/>

            <com.example.internproject_revamp.widgets.CLEditText
                android:id="@+id/tie_current_password"
                style="@style/EditTextCommonStyle"
                android:layout_marginTop="@dimen/spacing_5"
                android:layout_marginBottom="@dimen/spacing_15"
                android:hint="@string/current_password"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="@id/changed_password_layout"
                app:layout_constraintEnd_toEndOf="@id/changed_password_layout"
                app:layout_constraintStart_toStartOf="@id/changed_password_layout"
                app:layout_constraintTop_toBottomOf="@id/tv_changed_password"
                tools:text="8409384"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InternProjectRevamp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!--Material button style that applied for whole app-->
    <style name="MaterialButtonCommonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:padding">@dimen/spacing_12</item>
        <item name="cornerRadius">@dimen/spacing_6</item>
        <item name="textAllCaps">false</item>
        <item name="android:radius">@dimen/spacing_16</item>
    </style>

    <!--Text view style that applied for whole app-->
    <style name="TextViewCommonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--Edit text style that applied for whole app-->
    <style name="EditTextCommonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="EditTextCommonStyle.EmailAlertStyle">
        <item name="android:layout_marginStart">@dimen/spacing_15</item>
        <item name="android:layout_marginEnd">@dimen/spacing_15</item>
        <item name="android:layout_marginTop">@dimen/spacing_15</item>
        <item name="android:layout_marginBottom">@dimen/spacing_15</item>
        <item name="android:padding">@dimen/spacing_10</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewCommonStyle.ForgotPassword">
        <item name="android:layout_marginStart">@dimen/spacing_16</item>
        <item name="android:layout_marginEnd">@dimen/spacing_16</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewCommonStyle.ToolbarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/cerise_red</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="EditProfileCardViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_6</item>
    </style>

    <style name="EditProfileConstraintLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_5</item>
        <item name="android:layout_marginStart">@dimen/spacing_15</item>
        <item name="android:layout_marginEnd">@dimen/spacing_15</item>
        <item name="android:layout_marginBottom">@dimen/spacing_5</item>
    </style>

    <style name="TextViewCommonStyle.ProfileImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/cerise_red</item>
        <item name="android:textSize">@dimen/font_11</item>
        <item name="android:layout_marginStart">@dimen/spacing_27</item>
        <item name="android:layout_marginEnd">@dimen/spacing_27</item>
    </style>

    <style name="EditTextCommonStyle.ProfileEditText">
        <item name="android:layout_marginTop">@dimen/spacing_5</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SignupCardViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_6</item>
        <item name="android:layout_marginStart">@dimen/spacing_16</item>
        <item name="android:layout_marginEnd">@dimen/spacing_16</item>
    </style>

    <style name="TextViewCommonStyle.ViewProfileTextView">
        <item name="android:layout_marginStart">@dimen/spacing_15</item>
        <item name="android:layout_marginEnd">@dimen/spacing_15</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_4</item>
    </style>

    <style name="ViewProfileConstraintLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_15</item>
    </style>
</resources>